<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_selected="true">
        <shape android:shape="oval">
            <size android:height="16dp"
                android:width="16dp"/>
            <solid android:color="@color/colorGradGreen"/>
        </shape>
    </item>

    <item android:state_activated="true" android:state_selected="false">
        <shape android:shape="oval">
            <size android:height="16dp"
                android:width="16dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>

<item android:state_selected="true">
    <shape android:shape="oval">
        <size android:height="16dp"
            android:width="16dp"/>
        <solid android:color="@color/color_text_white"/>
    </shape>
</item>
    <item>
        <shape android:shape="oval">
            <size android:height="16dp"
                android:width="16dp"/>
            <solid android:color="@color/color_text_grey"/>
        </shape>
    </item>

</selector>