<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Withdraw.WithdrawActivity">


    <include
        android:id="@+id/appbar"
        layout="@layout/layout_appbar" />

    <TextView
        android:id="@+id/TVBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_margin="10dp"
        android:text="BALANCE"
        android:textColor="@color/color_text_white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="$0.00"
        android:textColor="@color/color_text_white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TvPaymentMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVBalance"
        android:layout_margin="10dp"
        android:text="PAYMENT METHODS"
        android:textColor="@color/color_text_white"
        android:textSize="12sp" />

    <HorizontalScrollView
        android:id="@+id/HSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvPaymentMode">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IVAdvCardLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_advcash" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/IVAdvCardLogo"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="AdvCash USD"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IVNeteller"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_neteller" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/IVNeteller"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="Neteller"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/PerfectMoney"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PerfectMoney"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="PerfectMoney"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Qiwi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_qiwi" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Qiwi"
                    android:layout_centerHorizontal="true"
                    android:text="Qiwi"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Skrill"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_skrill" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Skrill"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="Skrill"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Webmoney_WME"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_webmoney_wme" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Webmoney_WME"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="Webmoney WME"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:background="@color/colorWhiteTrans"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Wenmoney_WMZ"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_webmoney_wmz" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Wenmoney_WMZ"
                    android:layout_centerHorizontal="true"
                    android:text="Wenmoney WMZ"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/RL_InsufficientFunds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HSV"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVInfunds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:drawableTint="@color/color_text_white"
            android:text="Insufficient funds"
            android:textColor="@color/color_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVInfunds"
            android:layout_alignParentEnd="true"
            android:text="Minimum withdrawal amount is $ 2.00"
            android:textColor="@color/color_text_grey"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL_InsufficientFunds"
        android:layout_margin="10dp"
        android:text="You have no trasaction yet"
        android:textColor="@color/color_text_white"
        android:textSize="12sp" />

</RelativeLayout>