<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CVDigital"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/colorWhiteTransparent"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/LLDigital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CIV_symbol"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/eurusd" />

            <TextView
                android:id="@+id/tvsymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="9"
                android:text="AUD / JYP"
                android:textColor="@color/color_text_white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLDigitalVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/LLDigital"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Tv_DigitalSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="9"
                android:padding="2dp"
                android:visibility="gone"

                android:text="AUD / JYP"
                android:textColor="@color/color_text_white"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/TV_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Digital"
                android:visibility="gone"
                android:textColor="@color/color_text_grey"
                android:textSize="8sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLDigitalClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/LLDigitalVisible"
            android:gravity="center">

            <ImageView
                android:id="@+id/IVDigitalClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_close"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>




