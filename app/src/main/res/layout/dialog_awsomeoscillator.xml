<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/RLLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awesome Oscillator"
            android:padding="8dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="#1DFFFFFF"
            android:textColor="@color/colorWhite"
            android:drawableEnd="@drawable/ic_close"/>


            <RelativeLayout
                android:id="@+id/RLslowperiod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_text_bg"
                android:layout_below="@+id/TvTitle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow period"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorLightGray"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorLightGray"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlfastperiod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/color_text_bg"
                android:layout_below="@+id/RLslowperiod">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast period"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorLightGray"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorLightGray"/>
            </RelativeLayout>




    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/RLLine"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/BtnRestore"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:text="Restore"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_border"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="apply"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/btn_background_green"/>

        </LinearLayout>

    </RelativeLayout>







