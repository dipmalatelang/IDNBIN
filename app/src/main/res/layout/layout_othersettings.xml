<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TV_GT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGray"
        android:text="OTHER SETTINGS"
        android:textSize="12sp"

        android:layout_margin="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_GT"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
>
        <Switch
            android:id="@+id/Switch_TraderSentiments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="10dp"
            android:text="Trader's Sentiments"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorWhiteTrans"

            android:theme="@style/SwitchTheme" />
        <Switch
            android:id="@+id/Switch_LiveDeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_below="@+id/Switch_TraderSentiments"
            android:padding="10dp"
            android:textSize="12sp"

            android:text="Live deals"
            android:layout_marginBottom="2dp"
            android:background="@color/colorWhiteTrans"
            android:textColor="@color/colorWhite"
            android:theme="@style/SwitchTheme" />
        <Switch
            android:id="@+id/Switch_Assets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorWhiteTrans"
            android:layout_below="@+id/Switch_LiveDeals"
            android:padding="10dp"
            android:text="Apply indicators to all assets"
            android:textColor="@color/colorWhite"
            android:theme="@style/SwitchTheme" />
        <Switch
            android:id="@+id/Switch_Volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_below="@+id/Switch_Assets"
            android:layout_marginBottom="2dp"
            android:background="@color/colorWhiteTrans"
            android:padding="10dp"
            android:text="Volume"
            android:textSize="12sp"

            android:textColor="@color/colorWhite"
            android:theme="@style/SwitchTheme" />
    </RelativeLayout>





</RelativeLayout>