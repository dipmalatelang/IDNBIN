<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/RLmainlayout"
    android:layout_height="match_parent">

    <include
        android:id="@+id/appbar"
        layout="@layout/layout_appbar" />

    <TextView
        android:id="@+id/TV_GT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="GRAPICAL TOOLS"
        android:layout_below="@+id/appbar"
        android:textColor="@color/colorLightGray" />

    <HorizontalScrollView
        android:id="@+id/HSChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_GT"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IvTools"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_rectangle_transparent"
                android:padding="4dp"
                android:src="@drawable/ic_show_chart_black_24dp" />


        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/TvActivetools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HSChart"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_button_transparent"
        android:drawableEnd="@drawable/ic_nav"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Active tools"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TvIndicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvActivetools"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_button_transparent"
        android:drawableEnd="@drawable/ic_nav"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Indicators"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/TvTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvIndicators"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_button_transparent"
        android:drawableEnd="@drawable/ic_nav"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Template"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TvOtherSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvTemplate"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_button_transparent"
        android:drawableEnd="@drawable/ic_nav"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Other Settings"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/RLFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvOtherSettings"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/frameLayouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


</RelativeLayout>