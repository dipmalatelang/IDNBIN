<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        tools:context=".LoginRegister.FragmentRegistration">

        <TextView
            android:id="@+id/TvFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Full Name"
            android:textColor="@color/color_text_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/EtFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvFullname"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edittext"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EtFullname"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Email"
            android:textColor="@color/color_text_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/EtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvEmail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edittext"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EtEmail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Password"
            android:textColor="@color/color_text_grey"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/EtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edittext"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/CbShowPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EtPassword"
            android:layout_marginStart="20dp"
            android:buttonTint="@color/color_text_grey"
            android:text="Show Password"
            android:textColor="@color/color_text_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TvSelectCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CbShowPwd"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Select Default Currency"
            android:textColor="@color/color_text_grey"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/LLCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvSelectCurrency"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_border_white"
            android:visibility="gone">

            <Spinner
                android:id="@+id/SpCurrency"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/color_text_grey"
                android:padding="5dp"
                android:popupBackground="@color/colorBackground"
                android:singleLine="true"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/CbTandC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLCurrency"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/colorWhite"
            android:checked="true"
            android:text="I'm 18 years old, I agree to"
            android:textColor="@color/color_text_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TvTermsAndCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLCurrency"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/CbTandC"
            android:text=" Terms &amp; Conditions"
            android:textColor="@color/color_tab_highlight"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TvAnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLCurrency"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/TvTermsAndCondition"
            android:text=" and "
            android:textColor="@color/color_text_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TvPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLCurrency"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/TvAnd"
            android:text=" Privacy &amp; Policy"
            android:textColor="@color/color_tab_highlight"
            android:textSize="10sp" />

        <Button
            android:id="@+id/BtnRegister"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/CbTandC"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_grey_rounded"
            android:text="Register"
            android:textColor="@color/color_text_black"
            android:textSize="12sp" />

    </RelativeLayout>

</ScrollView>