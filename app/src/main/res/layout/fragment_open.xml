                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ExpirationTime_value"
                        android:layout_alignParentEnd="true"
                        android:text="75.36370"
                        android:textColor="@color/color_text_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_Direction_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_Level_value"
                        android:layout_alignParentEnd="true"
                        android:text="75.16330"
                        android:textColor="@color/color_text_white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_Investment_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_Direction_value"
                        android:layout_alignParentEnd="true"
                        android:text="95%"
