                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/IVLogo"
                    android:text="EUR/USD"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_cncy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="6dp"
                    android:text="$0.90"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_dgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_st"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/IVLogo"
                    android:text="Digital"
                    android:textColor="@color/color_text_grey"
                    android:textSize="12sp" />


                <RelativeLayout
                    android:id="@+id/relativeLayout_digital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_dgl"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/IVLogo"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_optionprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:text="Option Price"
                        android:textColor="@color/color_text_grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_qtty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_optionprice"
                        android:layout_marginTop="3dp"
